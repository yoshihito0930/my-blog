---
interface Props {
  name: string;
  href: string;
  focused: boolean | undefined;
}
const { name, href, focused } = Astro.props;
---

<a class={focused ? "focus" : "nonFocus"} href={href}>{name}</a>

<style>
  a {
    display: inline-block;
    padding: 1px 2px;
    border-radius: 50px;
    text-decoration: none;
    transition: background-color 0.3s, color 0.3s;
  }
  a:link, a:visited {
    text-decoration: none; /* Remove underline */
    color: #423e3e;
  }
  .focus {
    background-color: #474747;
    color: #fff;
  }
  .nonFocus {
    background-color: #d1d1d1;
    color: #423e3e;
  }
  a:hover {
    background-color: #a0a0a0;
    color: #423e3e;
  }
</style>